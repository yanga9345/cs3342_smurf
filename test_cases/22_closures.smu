let a = 99
let f = fn(x) { x + a }

print(f(1))     #=> 100

# check it's a live reference
a = 100
print(f(1))     #=> 101

# check function execution creates a closure

let add_n = fn (n) { fn (x) { x + n }}
let add_2 = add_n(2)
let add_3 = add_n(3)
print(add_2(2))       #=> 4
print(add_3(10))      #=> 13
print(add_3(2))       #=> 5
print(add_2(10))      #=> 12